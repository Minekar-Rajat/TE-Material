    public Main(String args[])
    {
        this.args = args;
        initComponents();
        //JOptionPane.showMessageDialog(null, "\n\n\t" + args[0]  );
            
          try {  
            boolean flag;
            // TODO add your handling code here:
            String path = "jdbc:mysql://localhost:3306/emp";
            Connection con =  DriverManager.getConnection(path,"root","");
            Statement st = con.createStatement();
            String Query = "select * from emp.employee where name = '" + args[0] + "'";
            ResultSet rs = st.executeQuery(Query);
            flag = rs.next();
            String s;
            if(flag)
            {
                s = rs.getString("name");
                lblUname.setText(s);
                s = rs.getString("email");
                lblMail.setText(s);
                s = rs.getString("desig");
                lblDesig.setText(s);
                s = rs.getString("exp");
                lblExp.setText(s + " Years");
                s = rs.getString("salary");
                lblSal.setText("Rs. " +s );
                
            }
            else
            {
                JOptionPane.showMessageDialog(null, " Error : No Data Found !"  );
            }
            }
          catch (SQLException ex) {
            Logger.getLogger(Main.class.getName()).log(Level.SEVERE, null, ex);
        }
    }

